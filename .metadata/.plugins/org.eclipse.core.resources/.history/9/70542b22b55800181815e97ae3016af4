package jrJava.mouseAndMaze;

import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;

public class Maze {

	private BufferedImage image;

	public Maze() {
		try {
			image = ImageIO.read(new File("jrJava/mouseAndMaze/maze.png"));
		} catch (IOException e) {
			e.printStackTrace();
			System.out.println("rEEeeeeEEEEEeeeeEEEEeeeeEEeeeEEEEEEeEEEEee");
		}
	}

	public void draw(int x, int y) {
		
	}

	public boolean hitWall(int x, int y) {
		return false;
	}

	public int getAlpha(intx, int y) {
		int color = image.getRGB(x, y);
		return (color>>24) & 0x000000f;
	}

	public int getRed() { return 0; }

	public int getGreen() { return 0; }

	public int getBlue() { return 0; }
}
